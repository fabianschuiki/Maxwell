//A mathematical vector.
type Vector
{
	var x;
	var y;
	
	func (*) (Vector other) -> (result) { result = this.x*other.x + this.y*other.y; }
	func (+) (Vector other) -> (result) { result.x = this.x + other.x; result.y = this.y + other.y; }
	func (-) (Vector other) -> (result) { result.x = this.x - other.x; result.y = this.y - other.y; }
	func (=) (Vector other) -> (result) { result.x = (this.x = other.x); result.y = (this.y = other.y); }
}

//A mathematical norm.
func norm (a) -> (v) { sqrt(a*a); }

//A straight line between two points.
type Line
{
	var Vector s;
	var Vector e;
	
	func direction () -> (d) { d = this.e - this.s; }
	func length () -> (l) { l = norm(direction(this)); }
}

